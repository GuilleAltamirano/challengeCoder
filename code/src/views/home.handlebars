<link rel="stylesheet" type="text/css" href="/css/customerProducts.css">

<div class="container">
    <h2 class="titles">Products</h2>
    <div class="products-container">
        {{#each payload}}
        <div class="product">
            <img class="thumbnails" alt="Imagen del producto" src="{{thumbnails}}">
            <h2>{{title}}</h2>
            <p class="price">Precio: ${{price}}</p>
            <p class="stock">Stock:{{stock}}</p>
            <button class="add-to-cart" _id="{{_id}}">AÃ±adir al carrito</button>
        </div>
        {{/each}}
    </div>
    <div class="pagination-container">
        {{#if hasPrevPage}}
        <a class="pagination prev" href="?page={{prevPage}}">Anterior</a>
        {{/if}}

        <div class="pagination-pages">
        {{#each totalPages}}
        {{#if ../page '==' this}}
        <span class="pagination-page current">{{this}}</span>
        <a class="pagination-page" href="?page={{this}}">{{this}}</a>
        {{/if}}
        {{/each}}
        </div>

        {{#if hasNextPage}}
        <a class="pagination next" href="?page={{nextPage}}">Siguiente</a>
        {{/if}}
    </div>
</div>

<script type="module" src="/js/home.js"></script>
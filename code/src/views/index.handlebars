<h1 class="title">Products</h1>
<div class="containerProducts">
    {{#each this}}
        {{#if this.status}}
            <div class="product">
                <img src={{this.thumbnail}} class="imgProd" alt="img {{this.title}}">
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>${{this.price}}</p>
                <p>disponibles: {{this.stock}}</p>
            </div>
        {{/if}}
    {{/each}}
</div>

